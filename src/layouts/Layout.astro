---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth scroll-pt-8 bg-slate-950">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
		<title>{title}</title>
		<meta name="description" content="open source apps created by Saiya">
		<base target="_blank">
	</head>
	<body>
		<slot />
	</body>
</html>
